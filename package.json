{
  "name": "platform",
  "version": "0.1.0",
  "private": true,
  "description": "Mono-repo of all open sourced Caldera code and projects",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx use-yarn",
    "bootstrap": "yarn install && yarn build",
    "rebootstrap": "run-s clean bootstrap killallNode",
    "killallNode": "killall node",
    "build": "yarn lerna:run-deps build",
    "dev": "run-s build 'lerna:run-deps dev --parallel'",
    "clean": "run-p clean:*",
    "clean:node_modules": "lerna run clean:node_modules --parallel && rimraf node_modules",
    "clean:build": "lerna run clean:build --parallel",
    "lerna": "lerna",
    "lerna:run-deps": "lerna run --include-filtered-dependencies",
    "commit": "git-cz",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": "^10.15.0",
    "yarn": "^1.13.0"
  },
  "os": [
    "darwin",
    "linux",
    "!win32"
  ],
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caldera-digital/platform.git"
  },
  "author": "Marcus Wood <marcus@calderadigital.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caldera-digital/platform/issues"
  },
  "homepage": "https://github.com/caldera-digital/platform#readme",
  "husky": {
    "hooks": {
      "pre-push": "echo 'Lint on push soon'",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@caldera-digital/babel-preset": "^0.1.0",
    "@caldera-digital/rollup-config": "^0.1.0",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/config-lerna-scopes": "^7.5.1",
    "@svgr/rollup": "^4.2.0",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.21",
    "commitizen": "^3.1.1",
    "conventional-changelog-angular-emoji": "^0.2.2",
    "cz-conventional-changelog": "^2.1.0",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^5.16.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.1.0",
    "lerna": "^3.13.4",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "prettier": "^1.17.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^4.2.3",
    "styled-components": "4.2.0",
    "use-yarn": "^2.2.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
