{
  "name": "platform",
  "private": true,
  "description": "Mono-repo of all open sourced Caldera code and projects",
  "homepage": "https://github.com/caldera-digital/platform#readme",
  "bugs": {
    "url": "https://github.com/caldera-digital/platform/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caldera-digital/platform.git"
  },
  "license": "MIT",
  "author": "Marcus Wood <marcus@calderadigital.com>",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "scripts": {
    "bootstrap": "yarn install && yarn build",
    "build": "yarn lerna:run-deps build",
    "clean": "run-p clean:*",
    "clean:build": "lerna run clean:build --parallel",
    "clean:node_modules": "lerna run clean:node_modules --parallel && rimraf node_modules",
    "commit": "git-cz",
    "cosmos": "cosmos",
    "lerna": "lerna",
    "lerna:run": "lerna run",
    "lerna:run-deps": "lerna run --include-filtered-dependencies --stream",
    "lerna:list": "lerna list --long --all",
    "lerna:diff": "lerna diff",
    "lerna:change": "lerna changed --long || true",
    "cosmos:export": "cosmos-export",
    "dev": "run-s build 'lerna:run-deps dev --parallel'",
    "preinstall": "npx use-yarn",
    "killallNode": "killall node",
    "lint": "lerna run lint --parallel",
    "test": "lerna run test -- parallel",
    "rebootstrap": "run-s clean bootstrap killallNode",
    "release": "yarn build && yarn lerna publish --ignore @caldera-digital/{caldera-www,ecommerce-stripe-client,ecommerce-stripe-server}",
    "caldera": "yarn lerna:run-deps --scope @caldera-digital/caldera*",
    "caldera:dev": "yarn caldera --parallel dev",
    "caldera:build": "yarn caldera build",
    "ecommerce": "yarn lerna:run-deps --scope @caldera-digital/ecommerce-stripe*",
    "ecommerce:dev": "yarn ecommerce --parallel dev",
    "ecommerce:build": "yarn ecommerce build"
  },
  "husky": {
    "hooks": {
      "pre-push": "echo 'Lint on push soon'",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "@caldera-digital/babel-preset": "^1.0.2",
    "@caldera-digital/rollup-config": "^1.0.2",
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@commitlint/config-lerna-scopes": "^7.5.1",
    "@svgr/rollup": "^4.2.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.2",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^4.3.5",
    "@types/react-stripe-elements": "^1.3.2",
    "@types/recompose": "^0.30.7",
    "@types/stripe": "^6.31.23",
    "@types/styled-components": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-import": "^1.12.0",
    "babel-plugin-inline-react-svg": "^1.1.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.21",
    "commitizen": "^3.1.1",
    "conventional-changelog-angular-emoji": "^0.2.2",
    "css-loader": "^2.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^5.16.0",
    "eslint-config-node": "^4.0.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-config-react-app": "^4.0.0",
    "eslint-plugin-flowtype": "^3.7.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "firestore-export-import": "^0.2.7",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.1.0",
    "lerna": "^3.13.4",
    "less": "^3.9.0",
    "less-loader": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^5.2.0",
    "prettier": "^1.17.0",
    "prop-types": "^15.7.2",
    "react": "16.8.6",
    "react-cosmos": "^5.0.0-alpha.2",
    "react-dom": "16.8.6",
    "rimraf": "^2.6.3",
    "rollup": "^1.10.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-postcss": "^2.0.3",
    "style-loader": "^0.23.1",
    "styled-components": "4.2.0",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.3",
    "use-yarn": "^2.2.0",
    "webpack": "^4.30.0"
  },
  "engines": {
    "node": "^10.15.0",
    "yarn": "^1.13.0"
  },
  "os": [
    "!win32",
    "darwin",
    "linux"
  ],
  "browserslist": [
    ">0.25%",
    "not dead",
    "IE 11"
  ]
}
